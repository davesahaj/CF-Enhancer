{
  "manifest_version": 2,
  "name": "CF Enhancer",
  "version": "1.0",

  "description": "Enhances the overall codeforces UI experience",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.codeforces.com/*"],
      "js": ["cfscript.js"],
      "css": ["style.css"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "cfenhancer@example.com"
    }
  }
}
